Document manual
  Type: custom (0.3)
  Title: OASIS User Manual
  if flag(gettext)
    XCustom: env LANG=C $oasis -ignore-plugins manual -o doc/MANUAL.mkd
  else
    XCustom: $oasis -ignore-plugins manual -o doc/MANUAL.mkd
  XCustomClean: $rm doc/MANUAL.mkd
  DataFiles: doc/MANUAL.mkd

