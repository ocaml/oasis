#!/bin/sh

# OASIS_START
set -e

FST=true
for i in "$@"; do 
  if $FST; then
    set --
    FST=false
  fi

  case $i in
    --*=*)
      ARG=${i%%=*}
      VAL=${i##*=}
      set -- "$@" "$ARG" "$VAL"
      ;;
    *)
      set -- "$@" "$i"
      ;;
  esac
done

ocaml setup.ml -configure "$@"
# OASIS_STOP
